<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/pay_shape"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请选择付费方式"
            android:textColor="#666666"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/text_sui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_type"
            android:layout_marginTop="@dimen/dp_10"
            android:text="让阅读随时随地"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/pay_qu"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_35"
            android:src="@drawable/ic_expand_more" />

        <ImageView
            android:id="@+id/img_ji"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@+id/text_sui"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@mipmap/rectangle_cheng" />

        <TextView
            android:id="@+id/text_ji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_ji"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="积分兑换"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/text_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_ji"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Integral purchase"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/text_ji_shuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_ji"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_20"
            android:text="购买说明："
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/text_buy_shuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_ji_shuo"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_6"
            android:text="只需一次性付费即可对该条资讯永久免费阅读"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_below="@+id/text_buy_shuo"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/payment_method_icon_integration_n" />

        <TextView
            android:id="@+id/text_btn_ji"
            android:textSize="@dimen/sp_14"
            android:text="点击兑换>>"
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/img_ji"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_below="@+id/img_ji"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@mipmap/rectangle_green" />

        <TextView
            android:id="@+id/text_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_vip"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="开通会员"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:id="@+id/vip_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_vip"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="membership purchase"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10" />
        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_below="@+id/vip_english"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/payment_method_icon_vip_n" />
        <TextView
            android:id="@+id/text_vip_shuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_vip"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_20"
            android:text="会员说明："
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/text_buy_vip_shuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_vip_shuo"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_6"
            android:text="会员可以免费阅读所有付费资讯"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/text_btn_vip"
            android:textSize="@dimen/sp_14"
            android:text="点击开通>>"
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/img_vip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>
