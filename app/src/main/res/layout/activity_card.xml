<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CardActivity">
    <RelativeLayout
        android:id="@+id/ralative"
        android:layout_width="match_parent"
        android:background="@drawable/view_style"
        android:layout_margin="@dimen/dp_4"
        android:layout_height="@dimen/dp_80">
        <ImageView
            android:id="@+id/back_setting"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/common_nav_btn_back_n"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />
        <TextView
            android:text="我的帖子"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ralative"
        android:visibility="gone"
        ></android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/image_null"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/ralative"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/kong" />
</RelativeLayout>