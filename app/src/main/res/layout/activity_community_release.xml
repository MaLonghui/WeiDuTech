<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    tools:context=".activity.CommunityReleaseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40">

        <TextView
            android:id="@+id/release_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/release_fabiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="发表"
            android:textColor="#20affa"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_137"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/dp_20">

        <EditText
            android:id="@+id/release_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/release_edit"
            android:gravity="top"
            android:maxLength="200"
            android:padding="@dimen/dp_12"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/edit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="0/200"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/img_add"
        android:layout_width="@dimen/dp_84"
        android:layout_height="@dimen/dp_84"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_39"
            android:layout_centerInParent="true"
            android:background="#f2f2f2" />

        <View
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_3"
            android:layout_centerInParent="true"
            android:background="#f2f2f2" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycer_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

</LinearLayout>