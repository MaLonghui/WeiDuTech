<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PlateDetailsActivity">
    <RelativeLayout
        android:id="@+id/infor_relative"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_24">

            <ImageView
                android:id="@+id/plate_details_back"
                android:src="@mipmap/common_icon_back_n"
                android:layout_width="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_24" />
            <TextView
                android:id="@+id/plate_details_title"
                android:layout_width="wrap_content"
                android:text="资讯"
                android:textSize="@dimen/sp_20"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/plate_details_search"
                android:src="@mipmap/common_nav_btn_search_n"
                android:layout_width="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_24" />
        </RelativeLayout>

    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/plate_xrecycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>


</LinearLayout>