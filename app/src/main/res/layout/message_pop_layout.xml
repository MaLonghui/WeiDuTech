<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    

    <ImageView
        android:id="@+id/jiao"
        android:layout_alignRight="@+id/pop_linear"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/pop_up"
        android:layout_marginBottom="-3dp"
        android:layout_marginRight="@dimen/dp_15"

        android:layout_height="@dimen/dp_20" />
    <LinearLayout
        android:layout_below="@id/jiao"
        android:id="@+id/pop_linear"
        android:layout_width="@dimen/dp_130"
        android:background="#666666"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_68">

        <LinearLayout
            android:id="@+id/add_friend_linear"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:src="@mipmap/nav_icon_add_friend_n"
                android:layout_height="@dimen/dp_24" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:text="加好友或群"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/creat_group_linear"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:src="@mipmap/nav_icon_add_group_n"
                android:layout_height="@dimen/dp_24" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:text="创建群聊"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
