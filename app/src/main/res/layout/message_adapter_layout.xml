<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_avator_recieve"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                app:roundAsCircle="true" />

            <ImageView
                android:id="@+id/left_san"
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/left_san"
                android:layout_marginLeft="-10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_avator_recieve"
                android:layout_height="@dimen/dp_20"
                />


                <TextView
                    android:id="@+id/tv_msg_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:layout_marginLeft="-7dp"
                    android:background="@drawable/message_left_shape"
                    android:padding="@dimen/dp_15"
                    android:layout_toRightOf="@id/left_san"
                    android:text="你发的"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
                <TextView
                    android:id="@+id/tv_msg_send"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/message_right_shape"
                    android:padding="@dimen/dp_15"
                    android:text="我发的"
                    android:layout_marginRight="-7dp"
                    android:layout_toLeftOf="@+id/right_san"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/right_san"
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/right_san"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_avator_send"
                android:layout_height="@dimen/dp_20"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_avator_send"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_12"
                app:roundAsCircle="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
