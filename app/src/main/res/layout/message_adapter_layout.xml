<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_avator_recieve"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:roundAsCircle="true"
                android:layout_marginRight="@dimen/dp_12"/>

            <TextView
                android:id="@+id/tv_msg_receive"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/left_receive"
                android:text="你发的"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/iv_avator_recieve"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">


                <TextView
                    android:id="@+id/tv_msg_send"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/right_send"
                    android:text="我发的"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"/>
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_avator_send"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:roundAsCircle="true"
                android:layout_marginLeft="@dimen/dp_12"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
