<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/p_simple_view"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:progressBarAutoRotateInterval="3000"
        app:progressBarImage="@drawable/img_loading"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/p_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@id/p_simple_view"
        android:text="asdfadsf"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/p_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_text_name"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toRightOf="@id/p_simple_view"
        android:text="asdfadsf"
        android:textColor="#999999"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/p_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_simple_view"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="asdfsdf"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@id/p_text_content"
        android:background="#f2f2f2" />


</RelativeLayout>
