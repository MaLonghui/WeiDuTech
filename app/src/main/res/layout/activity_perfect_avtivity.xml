<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PerfectAvtivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/attention_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_nav_btn_back_n" />

        <TextView
            android:id="@+id/i8show_attention_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="完善个人信息"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/text_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:text="完成"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginRight="@dimen/dp_6"
            android:hint="例:厸"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="@dimen/dp_6"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/text_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:text="男"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/viewtwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/text_sex"
            android:layout_marginTop="@dimen/dp_6"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewtwo"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="签名"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/text_signature"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/viewtwo"
            android:background="@null"
            android:hint="你想说的"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_6" />

        <View
            android:id="@+id/viewthree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/text_signature"
            android:layout_marginTop="@dimen/dp_6"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewthree"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:text="出生日期"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/text_birth"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/viewthree"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:background="@null"
            android:layout_centerVertical="true"
            android:hint="例:1998-6-25"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/viewfour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/text_birth"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewfour"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="邮箱"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewfour"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:hint="例:123456@qq.com"
            android:background="@null"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/viewfive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/text_email"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#999999" />
    </RelativeLayout>
</LinearLayout>