<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddFriendActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/new_friend_bg"
        android:layout_height="@dimen/dp_256" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/add_user_head_n"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_193"
        app:roundAsCircle="true"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_77" />
    <TextView
        android:id="@+id/add_user_name_n"
        android:layout_toRightOf="@id/add_user_head_n"
        android:layout_marginTop="@dimen/dp_206"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_20"
        android:text="YUAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_user_integral_n"
        android:layout_width="wrap_content"
        android:layout_below="@+id/add_user_name_n"
        android:layout_toRightOf="@id/add_user_name_n"
        android:layout_marginLeft="@dimen/dp_6"
        android:textSize="@dimen/sp_10"
        android:text="(adfas)"
        android:textColor="#ff5552"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/add_user_vip_n"
        android:src="@mipmap/vip"
        android:layout_toRightOf="@id/add_user_head_n"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_below="@id/add_user_name_n"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45" />

    <TextView
        android:id="@+id/add_user_qian_n"
        android:textColor="#999999"
        android:text="asfdasd"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_user_head_n"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/add_user_linear_n"
        android:layout_below="@id/add_user_qian_n"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_12"
            android:text="---------------  个人资料  ---------------"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_user_sex_bir_n"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="#333333"
            android:text="adhfj"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_user_phone_n"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"
            android:text="adhfj"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_user_eamil_n"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"
            android:text="adhfj"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"
            android:text="Ta创建的群:"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_user_creat_group"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/add_user_btn_n"
        android:layout_width="@dimen/dp_336"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/reg_btn_shape"
        android:text="添加好友"
        android:textColor="#ffffff"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="@dimen/dp_40" />


</RelativeLayout>