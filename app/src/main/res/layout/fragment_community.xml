<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recycler_community"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
    <ImageView
        android:id="@+id/comment_release"
        android:layout_width="@dimen/dp_39"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/community_btn_publish_n"
        android:layout_height="@dimen/dp_39"/>
    <RelativeLayout
        android:id="@+id/community_relative"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="#ffffff"
        android:layout_marginBottom="@dimen/dp_100"
        android:layout_height="@dimen/dp_50">
        <EditText
            android:id="@+id/comment_edit"
            android:layout_centerVertical="true"
            android:background="@drawable/comment_edit_shape"
            android:hint="说点什么！见证当下"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_35" />
        <TextView
            android:id="@+id/comment_send"
            android:text="发送"
            android:layout_toRightOf="@id/comment_edit"
            android:layout_centerVertical="true"
            android:background="@drawable/reg_btn_shape"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:layout_width="@dimen/dp_50"
            android:gravity="center"
            android:layout_height="@dimen/dp_30" />

    </RelativeLayout>

</RelativeLayout>