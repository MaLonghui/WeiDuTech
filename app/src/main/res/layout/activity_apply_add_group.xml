<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ApplyAddGroupActivity">
    <ImageView
        android:id="@+id/group_bg_img"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_240"
        android:src="@mipmap/group_bg" />

    <ImageView
        android:id="@+id/group_back"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_36"
        android:src="@mipmap/common_icon_back_n" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/group_head_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        app:roundedCornerRadius="@dimen/dp_7"
        android:layout_alignBottom="@+id/group_bg_img"
        android:layout_marginBottom="@dimen/dp_m_20"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58" />
    <RelativeLayout
        android:id="@+id/group_rela"
        android:layout_width="match_parent"
        android:layout_below="@id/group_bg_img"
        android:layout_marginTop="@dimen/dp_30"
        android:background="#ffffff"
        android:layout_height="@dimen/dp_46">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:text="群成员"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:text="共5人"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/group_view"
        android:layout_width="match_parent"
        android:background="#f2f2f2"
        android:layout_below="@id/group_rela"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/group_view"
        android:background="#ffffff"
        android:layout_height="@dimen/dp_82">


    </RelativeLayout>


</RelativeLayout>