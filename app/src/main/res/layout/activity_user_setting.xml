<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserSettingActivity">
    <RelativeLayout
        android:id="@+id/setting_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@mipmap/common_icon_back_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="聊天设置"
            android:textColor="#666666"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/setting_rela"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/dp_360"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_80">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/setting_user_img"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                app:roundAsCircle="true"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36" />
            <TextView
                android:id="@+id/setting_user_qian"
                android:text="000"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_10"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_height="@dimen/dp_4"/>
        <TextView
            android:id="@+id/setting_user_name"
            android:text="addsfa"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:textColor="#333333"
            android:background="#ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46" />
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_height="@dimen/dp_1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46">
            <TextView
                android:id="@+id/setting_group"
                android:text="分组"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12"
                android:textColor="#333333"
                android:background="#ffffff"
                android:textSize="@dimen/sp_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/group_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/ic_navigate_next_"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/setting_select_liao"
            android:text="查询聊天记录"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:textColor="#333333"
            android:background="#ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46" />
        <View
            android:layout_width="match_parent"
            android:background="#f2f2f2"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/setting_delete_liao"
            android:text="清空聊天记录"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:textColor="#333333"
            android:background="#ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46" />

    </LinearLayout>

    <Button
        android:id="@+id/setting_delete_friend"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/setting_btn_shape"
        android:textSize="@dimen/sp_20"
        android:textColor="#ffffff"
        android:text="删除好友"
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_40" />
</RelativeLayout>