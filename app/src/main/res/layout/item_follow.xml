<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_height="@dimen/dp_78"
    android:layout_marginTop="@dimen/dp_26"
    android:padding="@dimen/dp_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simPle_follow"
        android:layout_width="@dimen/dp_36"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_10"
        fresco:progressBarAutoRotateInterval="3000"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="@dimen/dp_30"/>
    <TextView
        android:id="@+id/text_Nickname_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toRightOf="@+id/simPle_follow"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/text_name_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1203"
        android:layout_marginTop="@dimen/dp_23"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toRightOf="@+id/simPle_follow"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginTop="@dimen/dp_10"
        fresco:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
